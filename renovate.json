{
  "extends": [
    "config:base",
    ":semanticCommits",
    ":semanticCommitTypeAll(chore)"
  ],
  "ignorePaths": [
    "**/adr/**",
    "**/docs/**",
    "**/test/**"
  ],
  "dependencyDashboardTitle": "Renovate Dashboard ðŸ¤–",
  "packageRules": [
    {
      "matchUpdateTypes": [
        "patch",
        "pin",
        "digest"
      ],
      "automerge": true,
      "automergeType": "pr"
    },
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "automerge": true,
      "automergeType": "pr"
    }
  ],
  "labels": [
    "dependencies"
  ],
  "platformAutomerge": true,
  "platformCommit": true,
  "postUpdateOptions": [
    "gomodTidy"
  ],
  "commitBodyTable": true
}